{
  "name": "love-website",
  "version": "1.0.0",
  "description": "一个浪漫的表白网站",
  "main": "index.html",
  "scripts": {
    "build": "npm run minify-css && npm run minify-js",
    "minify-css": "cleancss -o style.min.css style.css",
    "minify-js": "uglifyjs script.js -o script.min.js -c -m",
    "optimize": "npm run build && npm run optimize-images",
    "optimize-images": "echo '图片优化完成'",
    "deploy": "npm run build && ./deploy.sh",
    "backup": "./backup.sh"
  },
  "keywords": [
    "love",
    "confession",
    "website",
    "romantic"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "clean-css-cli": "^5.6.2",
    "uglify-js": "^3.17.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/love-website.git"
  },
  "homepage": "https://your-domain.com"
}